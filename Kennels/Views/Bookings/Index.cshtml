@model IEnumerable<Kennels.Models.Booking>
@using Kennels.Controllers;

@{
    ViewBag.Title = "Index";
}

<h2>Bookings</h2>

@ViewBag.Empty
<p style="color: lawngreen;">
    @TempData["Thank"]
</p>
<p style="color: red;">
    @TempData["tooSoon"]
</p>

<table class="table">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Kennel.Name)
        </th>
        @if(BookingsController.KennelOwner == true)
        {
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalNights)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kennel.Name)
            </td>
            @if (BookingsController.KennelOwner == true)
            {
                <th>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </th>
            }
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNights)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BookingID })
            </td>
            <td>
                @Html.ActionLink("Cancel", "Delete", new { id = item.BookingID })
            </td>
        </tr>
    }

</table>
