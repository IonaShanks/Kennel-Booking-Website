@model IEnumerable<Kennels.Models.Rating>


<h2>My Ratings</h2>

<p style="color: lawngreen;">
    @TempData["Thank"]
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kennel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ratings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingDate)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kennel.Name)
            </td>
            <td>
                @{string star = "Stars";}
                @if (item.Ratings == 1)
                {
                    star = "Star";
                }
                @Html.DisplayFor(modelItem => item.Ratings) @star
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RatingID }) 
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RatingID }) 
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.RatingID })
            </td>
        </tr>
    }

</table>
