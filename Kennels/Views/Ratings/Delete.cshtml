@model Kennels.Models.Rating

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to remove your rating for @Html.DisplayFor(model => model.Kennel.Name)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Ratings)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ratings)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color, col-md-offset-1">
            <input type="submit" value="Delete" class="btn btn-default" style="margin-right: 2em;"/>   
            <button class="btn btn-default" onclick="location.href='@Url.Action("Index")';return false;">Cancel</button>
        </div>
        
    }
</div>
