@model Kennels.Models.ContactViewModel
<h2>@ViewBag.Message</h2>

<hr />

<div class="col-md-7">
    <h3 style="color: lawngreen;">@ViewBag.Success</h3>
    <br />
    <p>We are here to answer any questions you may have about our services. Reach out to us and we'll respond as soon as we can.</p>
    <p>Whether you need help with something, want to give us feedback on our website and kennels we list, or just want to tell us about an experience you had, we are always here to help. </p>
    <p>To contact us select IS Kennel Finder from the list. </p>
    <p>You may also use this to contact the kennels we list, to contact a specific kennel select them from the list. </p>
    
    <div>
        @using (Html.BeginForm())
        {
            if (TempData["Error"] == null)
            {
                <div>
                    <label class="control-label">To:</label>
                    <br />
                    <label class="control-label" for="inputDefault">Kennel </label>
                    <br />
                    @Html.DropDownList("emailTo", (SelectList)ViewBag.emailTo, "Select a Kennel", new { @class = "form-control" })
                    <p style="color: red;">@ViewBag.SelectKennel</p>
                </div>
                <br />
                
                <label class="control-label">From:</label>
                <br />
                <div>
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    <br />

                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
                <br />
                <div class="form-group">

                    @Html.LabelFor(model => model.EmailFrom, htmlAttributes: new { @class = "control-label" })                 
                    <br />
                    @Html.EditorFor(model => model.EmailFrom, new { htmlAttributes = new { @class = "form-control", style = "" } })
                    @Html.ValidationMessageFor(model => model.EmailFrom, "", new { @class = "text-danger" })

                </div>
                <br />

                <div class="form-group">

                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label" })

                    <br />
                    @Html.TextAreaFor(model => model.Message, htmlAttributes: new { @class = "form-control", style = "height:10em;" })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })

                </div>
                <br />
                <div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Send" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            }
        }
    </div>
    <div>
        @if (TempData["Error"] != null)
            {
            <div>@TempData["Error"]</div>
        }
    </div>
</div>


<div class="col-md-offset-9">
    <h4 style="color:#20b5e9;">Address</h4>
    <address>
        IS Kennel Finder<br />
        72 Ballyfermot<br />
        Ballyfermot<br />
        Dublin<br />
        D10<br />
    </address>

    <h4 style="color:#20b5e9;">Telephone</h4>
    <p>0892247319</p>

    <h4 style="color:#20b5e9;">Email</h4>
    <p>IonaKennel@gmail.com</p>

</div>
<br style="clear: both;">